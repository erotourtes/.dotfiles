# Default

set hidden true
set ignorecase true
set icons true

# Custom Functions
cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd rename %[ -e $1 ] && printf "file exists" || mv $f $1

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) xdg-open "$f" ;;
    esac
}}

cmd trash ${{
  trash-put "$f"
}}

# Archive bindings
cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

# Trash bindings
cmd trash ${{
    gio trash -- $fx
}}

map au unarchive

# Basic Functions
map d
map m

map p paste
map x cut
map y copy
map <enter> open
map R reload
map mf mkfile
map md mkdir

map r push :rename<space>
map o open

map dd trash

# Movement
map gd cd ~/Downloads
map gc cd ~/.config
map gt cd ~/.local/share/Trash/files
